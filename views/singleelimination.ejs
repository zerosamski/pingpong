  <% let playersarray = players %>
  <header>
   <h1 class="robintitle"><%= tourname %></h1>
  </header>
   <div class="container mt-5">
   <form action="/singleelimination" method="POST">
     <div class="pl-5 ml-5">
       <div class="row equal pl-3">
         <% if(playersarray.length%2 === 0){ %>
          <%let match = 1 %>
            <% for(var i = 0; i < playersarray.length; i=i+2) { %>
              <div class="col-sm-4 d-flex pb-3">
                <div class="card border-black mb-3" style=" width: 13rem;">
                  <div class="card-heading">  Match <%= match %>  </div>
                  <div class="card-body">
                    <p align="center">Who won?</p>
                    <div class="form-check">
                       <input class="form-check-input ma" type="checkbox" name="<%= playersarray[i].name %>" id="gridCheck1">
                       <label class="form-check-label mar" for="gridCheck1">
                         <%= playersarray[i].name %>
                       </label>
                       <input class="form-check-input marg" type="checkbox" name="<%= playersarray[i+1].name %>" id="gridCheck1">
                       <label class="form-check-label margi" for="gridCheck1">
                         <%= playersarray[i+1].name %>
                       </label>
                    </div>
                  </div>
                </div>
              </div>
            <%match ++%>
            <% } %>



            <%} else if (players.length %2 !== 0) { %>
            <% let randomplayer = playersarray[Math.floor(Math.random() * playersarray.length)] %>
            <% var index = playersarray.indexOf(randomplayer); %>
            <% if (index > -1) { %>
            <% playersarray.splice(index, 1); %>
            <% } %>

            <%let match = 1 %>

            <% for(var i = 0; i < playersarray.length; i=i+2) { %>
          <div class="col-sm-4 d-flex pb-3">
            <div class="card border-info mb-3" style=" width: 13rem;">
              <div class="card-heading">Match <%= match %></div>
              <div class="card-body">
                <p align="center">Who won?</p>
                <div class="form-check">
                   <input class="form-check-input ma" type="checkbox" name="<%= playersarray[i].name %>" id="gridCheck1">
                   <label class="form-check-label mar" for="gridCheck1">
                     <%= playersarray[i].name %>
                   </label>
                   <input class="form-check-input marg" type="checkbox" name="<%= playersarray[i+1].name %>" id="gridCheck1">
                   <label class="form-check-label  margi" for="gridCheck1">
                     <%= playersarray[i+1].name %>
                   </label>
                </div>
              </div>
            </div>
          </div>
          <%match ++%>
        <% } %>
      </div>




    </div>
    <div>
        <button class="bttnform"><span>Submit</span></button>
  </div>
        <input class="form-check-input marglucky" type="checkbox" name="<%= randomplayer.name %>" id="gridCheck1" checked>
      <p class="lucky"><%=randomplayer.name%> is lucky and goes to the next round! </p>
            <% } %>
  </form>
</div>


 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
